<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Kyvex API</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('../partials/header', { username: username }) %>
    <div class="container">
        <%- include('../partials/sidebar', { currentPage: currentPage }) %>
        <main class="main-content">
    <div class="page-header">
        <h1>Dashboard</h1>
        <p>Overview of your API usage and statistics</p>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Requests</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.totalRequests ? stats.totalRequests.toLocaleString() : '0' %></div>
        </div>

        <div class="stat-card">
            <h3>Today's Requests</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.todayRequests ? stats.todayRequests.toLocaleString() : '0' %></div>
        </div>

        <div class="stat-card">
            <h3>This Week</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.weekRequests ? stats.weekRequests.toLocaleString() : '0' %></div>
        </div>

        <div class="stat-card">
            <h3>This Month</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.monthRequests ? stats.monthRequests.toLocaleString() : '0' %></div>
        </div>

        <div class="stat-card">
            <h3>Active API Keys</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.activeKeys ? stats.activeKeys : '0' %></div>
            <div class="change">of <%= typeof stats !== 'undefined' && stats.totalKeys ? stats.totalKeys : '0' %> total</div>
        </div>

        <div class="stat-card">
            <h3>Total Threads</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.totalThreads ? stats.totalThreads.toLocaleString() : '0' %></div>
        </div>

        <div class="stat-card">
            <h3>Error Rate</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.errorRate ? stats.errorRate.toFixed(2) : '0' %>%</div>
        </div>

        <div class="stat-card">
            <h3>Avg Response Time</h3>
            <div class="value"><%= typeof stats !== 'undefined' && stats.avgResponseTime ? stats.avgResponseTime.toFixed(0) : '0' %>ms</div>
        </div>
    </div>

    <div class="card">
        <h2>Quick Actions</h2>
        <div style="display: flex; gap: 1rem; margin-top: 1rem;">
            <a href="/admin/api-keys" class="btn btn-primary">Manage API Keys</a>
            <a href="/admin/analytics" class="btn btn-primary">View Analytics</a>
        </div>
    </div>
        </main>
    </div>
    <script src="/js/admin.js"></script>
</body>
</html>
