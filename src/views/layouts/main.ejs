<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %> - Kyvex API</title>
    <link rel="stylesheet" href="/css/admin.css">
    <% if (typeof additionalStyles !== 'undefined') { %>
        <% additionalStyles.forEach(style => { %>
            <link rel="stylesheet" href="<%= style %>">
        <% }); %>
    <% } %>
</head>
<body>
    <% if (typeof showHeader !== 'undefined' && showHeader) { %>
        <%- include('../partials/header') %>
    <% } %>
    
    <div class="container">
        <% if (typeof showSidebar !== 'undefined' && showSidebar) { %>
            <%- include('../partials/sidebar') %>
        <% } %>
        
        <main class="main-content">
            <%- body %>
        </main>
    </div>
    
    <script src="/js/admin.js"></script>
    <% if (typeof additionalScripts !== 'undefined') { %>
        <% additionalScripts.forEach(script => { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>

